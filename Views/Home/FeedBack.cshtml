@model FeedBack.Models.FB;
@{
    ViewData["Title"] = "Feedback";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header text-center py-5">
                    <i class="fas fa-comments" style="font-size: 50px; color: #667eea;"></i>
                    <h2 class="mt-3" style="font-weight: 700; letter-spacing: 1.5px; font-size: 1.8rem;">We Value Your Feedback</h2>
                    <p class="mt-2 mb-0" style="opacity: 0.9; font-size: 1.05rem;">Your insights help us enhance your experience</p>
                </div>

                <div class="card-body p-5">
                    <form id="feedbackForm" asp-controller="Home" asp-action="FeedBack" method="post">
                        <!-- Name Field -->
                        <div class="mb-4">
                            <label for="name" class="form-label fw-bold mb-2">üë§ Your Name</label>
                            <input type="text" asp-for="Name" class="form-control form-control-lg" id="name" 
                                   placeholder="Enter your name" required 
                                   style="border-radius: 10px; border: 2px solid #e9ecef; padding: 12px 18px;">
                        </div>

                        <!-- Email Field -->
                        <div class="mb-4">
                            <label for="email" class="form-label fw-bold mb-2">‚úâÔ∏è Your Email</label>
                            <input type="email" asp-for="Email" class="form-control form-control-lg" id="email" 
                                   placeholder="Enter your email" required 
                                   style="border-radius: 10px; border: 2px solid #e9ecef; padding: 12px 18px;">
                        </div>

                        <!-- Feedback Textarea -->
                        <div class="mb-4">
                            <label for="message" class="form-label fw-bold mb-2">üí¨ Your Feedback</label>
                            <textarea asp-for="Fb" class="form-control form-control-lg" id="message" rows="4" 
                                      placeholder="Share your thoughts and feedback..." required 
                                      style="border-radius: 10px; border: 2px solid #e9ecef; padding: 12px 18px; resize: none;"></textarea>
                        </div>

                        <!-- Rating Selection -->
                        <label class="form-label fw-bold d-block mb-4">‚≠ê How was your experience?</label>
                        
                        <div class="rating-container">
                            <button type="button" class="btn btn-lg feedback-btn feedback-awesome" data-rating="awesome">
                                <div class="emoji">üòç</div>
                                <div class="rating-text">Awesome</div>
                            </button>
                            <button type="button" class="btn btn-lg feedback-btn feedback-good" data-rating="good">
                                <div class="emoji">üòä</div>
                                <div class="rating-text">Good</div>
                            </button>
                            <button type="button" class="btn btn-lg feedback-btn feedback-average" data-rating="average">
                                <div class="emoji">üòê</div>
                                <div class="rating-text">Average</div>
                            </button>
                            <button type="button" class="btn btn-lg feedback-btn feedback-bad" data-rating="bad">
                                <div class="emoji">üòû</div>
                                <div class="rating-text">Bad</div>
                            </button>
                        </div>

                        <input type="hidden" asp-for="Emojivalue" id="hiddenEmojiValue" />
                        
                        <div class="mt-4 text-center">
                            <p class="text-muted mb-0">Selected Rating:</p>
                            <span id="selectedRating" class="badge bg-secondary fs-6" style="padding: 10px 20px;">None</span>
                        </div>

                        <button type="submit" class="btn btn-lg w-100 mt-5" 
                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 10px; font-weight: 700; padding: 14px;" 
                                onclick="chk();">
                            üì§ Submit Feedback
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let selectedRating = null;
    function chk(){
        if(document.getElementById('name').value=="" || document.getElementById('email').value=="" || document.getElementById('message').value=="" || selectedRating==null){
            alert("Please fill all the fields and select a rating before submitting.");
            event.preventDefault();
        }
    }
    document.querySelectorAll('.feedback-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.feedback-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            selectedRating = this.dataset.rating;
            document.getElementById('selectedRating').textContent = selectedRating.toUpperCase();
            if(selectedRating.toUpperCase()=='AWESOME'){
                document.getElementById('hiddenEmojiValue').value = 1;
            } 
            else if(selectedRating.toUpperCase()=='GOOD'){
                document.getElementById('hiddenEmojiValue').value = 2;
            } 
            else if(selectedRating.toUpperCase()=='AVERAGE'){
                document.getElementById('hiddenEmojiValue').value = 3;
            } 
            else if(selectedRating.toUpperCase()=='BAD'){
                document.getElementById('hiddenEmojiValue').value = 4;
            }
        });
    });
</script>

<style>
    .rating-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 24px;
    }

    .feedback-btn {
        border: 2px solid #e9ecef;
        background: #f8f9fa;
        color: #495057;
        border-radius: 12px;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        padding: 20px 10px;
    }

    .feedback-btn .emoji {
        font-size: 2.5rem;
    }

    .feedback-btn .rating-text {
        font-size: 0.9rem;
        font-weight: 600;
    }

    .feedback-btn:hover {
        transform: translateY(-4px);
        border-color: #667eea;
        background: #f0f2ff;
        box-shadow: 0 8px 16px rgba(102, 126, 234, 0.2);
    }

    .feedback-btn.active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: #667eea;
        box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
</style>